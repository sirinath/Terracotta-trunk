<?xml version="1.0" encoding="ISO-8859-1"?>
<ivy-module version="2.0">  
  <info organisation="ibiblio" module="junit-formatter-tests-base"/>
  <configurations>
    <conf name="compile" description="compile time"/>
  </configurations>
  <dependencies>
    <dependency name="ant" rev="1.7.1" org="terracotta" conf="compile->default"/>
    <dependency name="ant" rev="junit-1.7.1" org="terracotta" conf="compile->default"/>
    <dependency name="junit" rev="3.8.1" conf="compile->default"/>
  </dependencies>
  
  <conflicts>
    <!-- this will prevent ivy from being dumb and evicting the
         ant-junit dependency -->
    <manager name="all"/>
  </conflicts>
</ivy-module>
