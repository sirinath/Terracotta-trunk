<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="Terracotta-XXX" location="applications"/>

    <shortcut
        name="Administrator Console"
        target="$INSTALL_PATH/bin/admin.sh"
        description="Start the Terracotta Administrator Console"
        programGroup="yes"
        desktop="yes"
        applications="yes"
        startMenu="yes"
        startup="no"
        initialState="normal"
        iconFile="$INSTALL_PATH/icons/logo_small.png"
        type="Application"
        encoding="UTF-8"
        terminal="false"
        KdeSubstUID="false">
     <createForPack name="Terracotta"/>
   </shortcut>

   <shortcut
            name="Terracotta Welcome"
            target="$INSTALL_PATH/welcome.sh"
            description="Start the Terracotta Welcome application"
            programGroup="yes"
            desktop="yes"
            applications="yes"
            startMenu="yes"
            startup="no"
            initialState="normal"
            iconFile="$INSTALL_PATH/icons/logo_small.png"
            type="Application"
            encoding="UTF-8"
            terminal="false"
            KdeSubstUID="false">
     <createForPack name="Terracotta"/>
   </shortcut>
</shortcuts>
