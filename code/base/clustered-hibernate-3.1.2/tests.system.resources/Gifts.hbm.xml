<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.tctest.domain.Gifts" table="GIFTS">
    <id name="id" column="GIFT_ID">
      <generator class="native"/>
    </id>
    <property name="name" type="string" column="GIFT_NAME"/>
    <property name="category" type="string" column="GIFT_CATEGORY"/>
  </class>
</hibernate-mapping>