  <artifactId>dso-tests-jdk15</artifactId>
  <name>dso-tests-jdk15</name>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <systemProperties>
            <property>
              <name>tc.base-dir</name>
              <value>code/base</value>
            </property>
            <property>
              <name>java.awt.headless</name>
              <value>true</value>
            </property>
            <property>
              <name>tc.tests.info.property-files</name>
              <value>../build/externally-run-tests/common/tests.unit.config</value>
            </property>
            <property>
              <name>tc.tests.info.junit-test-timeout-inseconds</name>
              <value>900</value>
            </property>
            <property>
              <name>tc.tests.info.temp-root</name>
              <value>target/temp-root</value>
            </property>
            <property>
              <name>tc.tests.info.jvm.version</name>
              <value>1.5.0_07</value>
            </property>
