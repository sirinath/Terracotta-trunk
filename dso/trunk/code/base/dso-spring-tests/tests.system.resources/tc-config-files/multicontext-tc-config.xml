<tc:tc-config 
    xmlns:tc="http://www.terracotta.org/config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.terracotta.org/config ..\..\..\common\src.resources\com\tc\config\schema\terracotta-2.2.xsd">

	<system>
		<configuration-model>development</configuration-model>
	</system>

	<clients>
		<logs>%d/client-logs-%h</logs>
	</clients>

	<servers>
		<server name="localhost" />
	</servers>

	<application>
	  <dso>
	    <instrumented-classes>
		  <include>
	        <class-expression>com.tctest.spring.bean.*</class-expression>
	        <honor-transient>true</honor-transient>
	      </include>
	    </instrumented-classes>
	  	<roots>
	      <root>
	        <field-name>com.tctest.spring.bean.SimpleBean.sharedId</field-name>
	      </root>
	      <root>
	        <field-name>com.tctest.spring.bean.SimpleBean.staticField</field-name>
	      </root>
	      <root>
	        <field-name>com.tctest.spring.bean.SimpleBean.field</field-name>
	      </root>
	      <root>
	        <field-name>com.tctest.spring.bean.SimpleBean.sharedRef</field-name>
	      </root>	      
	  	</roots>
	  	<locks>
	      <autolock auto-synchronized="true">
	        <method-expression>* com.tctest.spring.bean.*.get*(..)</method-expression>
	        <lock-level>read</lock-level>
	      </autolock>
	      <autolock auto-synchronized="true">
	        <method-expression>* com.tctest.spring.bean.*.set*(..)</method-expression>
	        <lock-level>write</lock-level>
	      </autolock>	    
	      <autolock auto-synchronized="true">
	        <method-expression>* com.tctest.spring.bean.*.next*(..)</method-expression>
	        <lock-level>write</lock-level>
	      </autolock>
	  	</locks>
	  </dso>	
	</application>

</tc:tc-config>

