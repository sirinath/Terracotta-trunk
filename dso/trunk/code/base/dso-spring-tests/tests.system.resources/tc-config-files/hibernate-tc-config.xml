<tc:tc-config 
    xmlns:tc="http://www.terracotta.org/config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.terracotta.org/config ..\..\..\common\src.resources\com\tc\config\schema\terracotta-config-v1.xsd">

	<system>
	    <configuration-model>development</configuration-model>
	</system>

	<clients>
		<logs>%d/client-logs-%h</logs>
	</clients>

	<servers>
		<server name="localhost" />
	</servers>
	
	<application>
		<spring>
			<jee-application name="test-hibernate">
				<application-contexts>
					<application-context>
						<paths>
							<path>*.xml</path>
						</paths>
						<beans>
							<bean name="hibernate-bean" />
						</beans>
					</application-context>
				</application-contexts>
				
				<instrumented-classes>
					<include>
						<class-expression>com.tctest.spring.bean.domain.PersistentObj*</class-expression>
					</include>
				</instrumented-classes>
				
			</jee-application>
			
		</spring>
		
		
	</application>

</tc:tc-config>
