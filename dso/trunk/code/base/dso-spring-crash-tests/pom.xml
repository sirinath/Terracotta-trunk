    </dependency>
    <dependency>
      <groupId>org.terracotta</groupId>
      <artifactId>simulator</artifactId>
      <version>${tcVersion}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.terracotta</groupId>
      <artifactId>legacy-test-tree</artifactId>
      <version>${tcVersion}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.terracotta</groupId>
      <artifactId>dso-l1</artifactId>
      <version>${tcVersion}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.terracotta</groupId>
      <artifactId>dso-spring</artifactId>
