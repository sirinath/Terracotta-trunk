<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.terracotta</groupId>
    <artifactId>parent14</artifactId>
    <version>2.6.0-SNAPSHOT</version>
    <relativePath>../parent14</relativePath>
  </parent>
  <artifactId>dso-l1-api</artifactId>
  <name>dso-l1-api</name>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>test-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <jvm>${jdk14.home}/bin/java</jvm>

          <!-- List of failing unit tests - probably need system properties set correctly -->
  		  <excludes>
		    <exclude>**/IdentityWeakHashMapTest.java</exclude>
		    <exclude>**/TraverserTest.java</exclude>
		    <exclude>**/ManagerImplTest.java</exclude>
		    <exclude>**/ClientObjectManagerTest.java</exclude>
		    <exclude>**/AsmMethodInfoTest.java</exclude>
		    <exclude>**/TCClassTest.java</exclude>
		    <exclude>**/BootJarTest.java</exclude>
		    <exclude>**/HashMapTCTest.java</exclude>
		    <exclude>**/ArrayManagerTest.java</exclude>
		    <exclude>**/TCObjectImplTest.java</exclude>
		  </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.terracotta</groupId>
      <artifactId>management</artifactId>
    </dependency>
    <dependency>
      <groupId>org.terracotta</groupId>
      <artifactId>common</artifactId>
    </dependency>
    <dependency>
      <groupId>org.terracotta</groupId>
      <artifactId>common</artifactId>
      <version>${tcVersion}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.terracotta</groupId>
      <artifactId>dso-common</artifactId>
      <version>${tcVersion}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.terracotta</groupId>
      <artifactId>management</artifactId>
      <version>${tcVersion}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    <!--
    <dependency>
      <groupId>org.terracotta</groupId>
      <artifactId>dso-common-jdk15</artifactId>
    </dependency>
    -->
    <dependency>
      <groupId>org.terracotta</groupId>
      <artifactId>aspectwerkz</artifactId>
    </dependency>
  </dependencies>
</project>
