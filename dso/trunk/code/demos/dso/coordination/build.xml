<project name="CyclicBarrier" default="build" basedir=".">
	<property name="src" location="src"/>
	<property name="build.dir" location="classes"/>

	<target name="init">
		<mkdir dir="${build.dir}"/>
	</target>

	<target name="build" depends="init" description="build the source ">
		<javac target="1.4" source="1.4" srcdir="${src}" classpath="lib/concurrent-1.3.4.jar" destdir="${build.dir}"/>
	</target>

	<target name="clean" description="clean up">
		<delete dir="${build.dir}"/>
	</target>
</project>
