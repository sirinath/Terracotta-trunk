<project name="SharedEditor" default="build" basedir=".">
	<property name="src" location="src"/>
	<property name="build.dir" location="classes"/>
	<property name="tc-bin.dir" location="../../bin"/>

	<target name="init">
		<mkdir dir="${build.dir}"/>
                <mkdir dir="${build.dir}/images"/>
	</target>

	<target name="build" depends="init" description="build the source, and copy the image files for the application.">
		<javac target="1.4" source="1.4" srcdir="${src}" destdir="${build.dir}"/>
                <copy todir="${build.dir}/images">
                  <fileset dir="images"/>
                </copy>
	</target>

	<target name="clean" description="clean up">
		<delete dir="${build.dir}"/>
	</target>
</project>
