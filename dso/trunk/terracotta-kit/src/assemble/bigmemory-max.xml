<assembly>
  <id>distribution</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>target</directory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*sources.jar</exclude>
        <exclude>*javadoc.jar</exclude>
        <exclude>*-tests.jar</exclude>
      </excludes>
      <outputDirectory>/lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/packaging/bigmemory-max</directory>
      <includes>
        <include>*.txt</include>
        <include>*.TXT</include>
        <include>*.html</include>
      </includes>
      <excludes>
        <exclude>*LICENSE*</exclude>
      </excludes>
      <filtered>true</filtered>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/packaging/bigmemory-max/legal</directory>
      <outputDirectory>/legal</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/${kit.name}/ehcache/lib</directory>
      <outputDirectory>/apis/ehcache/lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/${kit.name}/ehcache/javadoc</directory>
      <outputDirectory>/apis/ehcache/javadoc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/${kit.name}/ehcache</directory>
      <outputDirectory>/config-samples</outputDirectory>
      <includes>
        <include>ehcache.x*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/tmc-${tmc.version}</directory>
      <outputDirectory>/tools/tmc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/${kit.name}/bin</directory>
      <outputDirectory>/common/bin</outputDirectory>
      <includes>
        <include>keychain.*</include>
        <include>management-cli-common.*</include>
        <include>add-tc-agent.*</include>
        <include>usermanagement.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/${kit.name}/bin</directory>
      <outputDirectory>/server/bin</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/${kit.name}/lib</directory>
      <outputDirectory>/server/lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/${kit.name}/management</directory>
      <outputDirectory>/server/management</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/bigmemory-max-samples-${bigmemory.version}</directory>
      <outputDirectory>/code-samples</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
  </files>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/common/lib</outputDirectory>
      <includes>
        <include>org.terracotta*:*bigmemory*:jar</include>
      </includes>
      <excludes>
        <exclude>*:*:jar:javadoc</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/apis/toolkit/lib</outputDirectory>
      <includes>
        <include>org.terracotta*:*toolkit*:jar</include>
      </includes>
      <excludes>
        <exclude>*:*:jar:javadoc</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/apis/toolkit/javadoc</outputDirectory>
      <includes>
        <include>org.terracotta*:*toolkit*:jar:javadoc</include>
      </includes>
      <unpack>true</unpack>
    </dependencySet>
  </dependencySets>
</assembly>
